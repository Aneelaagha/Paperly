{
  "manifest_version": 3,
  "name": "Paperly",
  "version": "1.0.0",
  "description": "Cite. Summarize. Humanise. â€” Your all-in-one research helper.",
  "action": { "default_popup": "popup.html", "default_title": "Paperly",
  "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png"
    }
 },
 "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],


  "web_accessible_resources": [
    {
      "resources": ["humaniser.html", "humaniser.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "minimum_chrome_version": "137.0.0.0"
}
